@page
@model Triddm_NewsWebApp.Pages.Authentication.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <h2 class="header">Login</h2>
    <form method="post">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input class="form-control" asp-for="SignInRequest.email" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" asp-for="SignInRequest.password" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </div>
    </form>



    @if (!string.IsNullOrEmpty(@Model.Message))
    {
        <div class="alert alert-danger" role="alert">
            @Model.Message
        </div>
    }
</div>

<style>
    .container {
        margin: 20px;
    }

    .header {
        margin-left: 10px;
        margin-top: -3px;
        font-size: 30px;
    }
    .form-group:{
        margin: 10px;
    }
</style>

