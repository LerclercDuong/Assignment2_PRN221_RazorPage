@page
@model Triddm_NewsWebApp.Pages.Admin.Account.ListModel
@{
    ViewData["Title"] = "Account Management";
}

<div class="container">
    <h2 class="header">Account Management</h2>

    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Data:</label>
            <div class="datagrid-container">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Account ID</th>
                            <th>Account Name</th>
                            <th>Account Email</th>
                            <th>Account Role</th>
                            <th>View</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model.Accounts)
                        {
                            <tr>
                                <td>@account.AccountId</td>
                                <td>@account.AccountName</td>
                                <td>@account.AccountEmail</td>
                                <td>@account.AccountRole</td>
                                <td><a asp-page="./View" asp-route-id="@account.AccountId">View</a></td>
                                <td>
                                    <form method="post">
                                        <input type="hidden" asp-for="AccountId" value="@account.AccountId"/>
                                        <button type="submit" asp-page-handler="Delete">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" asp-page-handler="New" class="btn btn-primary">New</button>
            <button type="submit" asp-page-handler="Back" class="btn btn-secondary" onclick="location.href='@Url.Page("/Admin/Index")'">Back</button>
        </div>
    </div>
</div>

<style>
    .container {
        margin: 20px;
    }

    .header {
        margin-left: 205px;
        margin-top: -3px;
        font-size: 30px;
    }

    .datagrid-container {
        margin-top: 10px;
    }
</style>
